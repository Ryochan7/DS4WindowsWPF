                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="Light" />
                        <xctk:IntegerUpDown Value="0" Width="50" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <CheckBox Content="Change Light" />
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="R" />
                                <Slider Value="255" Minimum="0" Maximum="255" ToolTip="255" MinWidth="100" Background="{Binding MainColorRString, FallbackValue=Red}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="G" />
